<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/rv_banner_img_profpic"
        android:layout_width="44dp"
        android:layout_height="44dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/rv_banner_txt_creator_name"
        android:layout_width="wrap_content"
        android:layout_height="44dp"
        android:text="creator_name"
        android:textSize="14sp"
        android:textColor="@color/dark_accent"
        android:layout_toEndOf="@+id/rv_banner_img_profpic"
        android:layout_alignTop="@+id/rv_banner_img_profpic"
        android:layout_alignBottom="@id/rv_banner_img_profpic"
        android:gravity="center"
        android:layout_marginHorizontal="12dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rv_banner_img_profpic"
        android:layout_marginVertical="20dp"
        app:cardCornerRadius="10dp">

        <ImageView
            android:id="@+id/rv_banner_img_banner"
            android:layout_width="match_parent"
            android:layout_height="169dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>

    </androidx.cardview.widget.CardView>

</RelativeLayout>