<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="4dp"
    app:cardCornerRadius="10dp">
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        
        <androidx.constraintlayout.utils.widget.ImageFilterView
            android:id="@+id/rv_scd_img_profpic"
            android:layout_width="155dp"
            android:layout_height="164dp"
            android:src="@drawable/ic_launcher_background"
            android:scaleType="centerCrop"/>
        
        <TextView
            android:id="@+id/rv_scd_txt_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="title_here"
            android:textSize="14sp"
            android:textColor="@color/dark_accent"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/rv_scd_txt_creator_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="creator_name_here"
            android:textSize="12sp"
            android:textColor="@color/dark_accent"/>

        <TextView
            android:id="@+id/rv_scd_txt_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="date_here"
            android:textSize="12sp"
            android:textColor="@color/dark_accent"/>

        <TextView
            android:id="@+id/rv_scd_txt_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="time_here"
            android:textSize="12sp"
            android:textColor="@color/dark_accent"/>

        <TextView
            android:id="@+id/rv_scd_txt_price"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="price_here"
            android:textAlignment="textEnd"
            android:textSize="12sp"
            android:textColor="@color/dark_accent"/>
        
    </LinearLayout>

</androidx.cardview.widget.CardView>